{
  "name": "quanty-monorepo",
  "packageManager": "yarn@3.1.1",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache --continue",
    "build": "turbo run build",
    "start": "turbo run start --scope=apps",
    "lint": "turbo run lint",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/prettier": "^2",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "dev": {
        "cache": false
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "dashboard#start": {
        "dependsOn": [
          "^server#start"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ],
        "cache": true
      },
      "lint": {
        "outputs": []
      }
    }
  }
}
