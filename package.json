{
  "name": "quanty-monorepo",
  "packageManager": "yarn@3.1.1",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache --continue --scope=*app*",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "dev": {
        "cache": false
      },
      "start": {
        "dependsOn": [
          "^build"
        ]
      },
      "dashboard#start": {
        "dependsOn": [
          "^server#start"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**",
          "lib/**"
        ],
        "cache": true
      },
      "lint": {
        "outputs": []
      },
      "test": {}
    }
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jx,tsx}": [
      "eslint --fix"
    ],
    "packages/quanty/**/*.{js,ts,jx,tsx}": [
      "eslint --fix"
    ],
    "packages/quanty-cli/**/*.{js,ts,jx,tsx}": [
      "eslint --fix"
    ],
    "packages/quanty-schematics/**/*.{js,ts,jx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
